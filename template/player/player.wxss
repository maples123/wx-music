.player{
  position:fixed;
  left:0;
  right:0;
  bottom:0;
  height:120rpx;
  padding:20rpx 30rpx 0;
  border-top:1px solid #ccc;
  background-color:#fff;
}
.player .player-cover{
  float:left;
}
.player .player-cover image{
  width:100rpx;
}
.player .player-album{
  overflow:hidden;
  padding:10rpx 10px 0;
}
.player .player-album text{
  display:block;
}
.player .player-album .name{
  font-size:12px;
  color:#ccc;
}
.player .player-btm{
  float:right;
  padding-top:5rpx;
}
.player .player-btm image{
  width:90rpx;
}