/* 专辑列表 */
@import "/template/song/song.wxss";
/* player */
@import "/template/player/player.wxss";



.header{
  display:flex;
  background-color:#b3d4db;
  color:#fff;
  justify-content: center;
}
.header navigator{
  padding:0 15px 5px;
  margin-bottom:10px;
}
.header navigator.on{
  background:linear-gradient(#fff,#fff) no-repeat center bottom/ 90% 2px;
}


.home-banner swiper{
  height:300rpx;
  background:linear-gradient(#b3d4db,#b3d4db) no-repeat left top/ 100% 75%;
}
.home-banner swiper swiper-item{
  padding:0 20rpx;
  box-sizing: border-box;
}
.home-banner swiper swiper-item image{
  display:block;
  width:100%;
  height:100%;
  border-radius:5px;
}


.regio-type{
  display:flex;
  padding:26rpx 0 15rpx;
  border-bottom:1px solid #eee;
  justify-content: space-around
}
.regio-type navigator image{
  width:80rpx;
  height:80rpx;
}
.regio-type navigator text{
  display:block;
  font-size:13px;
  text-align:center;
}


.home-menu{
  padding-top:30rpx;
}
.home-menu .menu-title{
  padding-bottom:20rpx;
}
.home-menu .menu-title image{
  width:70rpx;
  height:70rpx;
  margin-left:2px;
  vertical-align: bottom;
}
.home-menu .menu-title text{
  vertical-align: bottom;
}
.home-menu .menu-con{
  padding:0 20rpx;
}

.emtipy{
  height:120rpx;
}

