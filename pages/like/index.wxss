
/* player */
@import "/template/player/player.wxss";

.link-header{
  position:relative;
  overflow: hidden;
}

.top-bg{
  z-index:-1;
  position:absolute;
  top:0;
  left:0;
  filter: blur(20px);
}

.like-des{
  display:flex;
  height:600rpx;
  align-items: center;
}
.like-des view{
  width:300rpx;
  height:300rpx;
}
.like-des .song-pic{
  margin-left:60rpx;
  margin-right:30rpx;
}
.like-des .song-pic image{
  width:100%;
  height:100%;
  border-radius: 10rpx;
}
.like-des .like-user{
  padding-top:10rpx;
  box-sizing: border-box;
  color:#fff;
}
.like-des .like-user .like-title{
  height:auto;
  margin-bottom:20rpx;
  font-size:16px;
}
.like-des .like-user .link-user-view image{
  vertical-align: middle;
  width:28%;
  height:28%;
  margin-right:20rpx;
  border-radius: 50%;
}
.like-des .like-user .link-user-view text{
  vertical-align: middle;
}




.like-list{
  z-index:999;
  margin-top:-75rpx;
  border-top-left-radius:20px;
  border-top-right-radius:20px;
  background-color:#fff;
}
.like-list .like-list-title{
  padding:20rpx 50rpx;
  border-bottom:1px solid #eee;
}
.like-list .list{
  margin-bottom:60px;
}
.like-list .list .list-item{
  display:flex;
  padding:20rpx;
}
.like-list .list .list-item .num{
  display:block;
  width:80rpx;
  height:80rpx;
  margin-right:20rpx;
  line-height:80rpx;
  text-align:center;
}
.like-list .list .list-item .item-song{
  
}
.like-list .list .list-item .item-song text{
  display:block;
}
.like-list .list .list-item .item-song .song-orig{
  font-size:10px;
  color:#ccc;
}