
page{
  color:#121212;
}
.chat-head{
  border-bottom:1px solid #eee;
}
.chat-head .chat-song{
  display:flex;
  padding:10px;
}
.chat-head .chat-song image{
  display:block;
  width:200rpx;
  height:200rpx;
  margin-right:20rpx;
  border-radius: 3px;
}
.chat-head .chat-song .song{
  overflow: hidden;
  flex:1;
  padding-top:20rpx;
}
.chat-head .chat-song .song .song-top{
  display:flex;
  width:100%;
  justify-content: space-between;
}
.chat-head .chat-song .song .song-top .song-name{
  width:70%;
}
.chat-head .chat-song .song .song-top .num{
  font-size:12px;
  color:#ccc;
}



text{
  display:block;
}
.f12{
  font-size:10px;
  color:#ccc;
}



.chat-list-view{
  overflow: hidden;
  height:calc(100vh - 310rpx);
}
.chat-list{
  padding:10px;
}
.chat-list .chat-item{
  margin-top:12px;
}
.chat-list .chat-item .caht-user{
  display:flex;
}
.chat-list .chat-item .caht-user image{
  width:80rpx;
  height:80rpx;
  margin-right:20rpx;
  border-radius:50%;
}

.chat-item .caht-user .user{
  flex:1;
  display:flex;
  justify-content: space-between;
}
.chat-item .caht-user .user .thumb{
  display:flex;
  align-items: center;
}
.chat-item .caht-user .user .thumb image{
  width:50rpx;
  height:50rpx;
}
.chat-item .caht-user .user .thumb text{
  margin-top:6px;
  font-size:10px;
}


.chat-list .chat-con{
  padding:10rpx 0;
  margin-left:100rpx;
  border-bottom:1px solid #eee;
  font-size:12px;
}


.chat-form{
  position:fixed;
  left:0;
  right:0;
  bottom:0;
  height:70rpx;
  border-top:1px solid #eee;
  padding:5px 20rpx;
  background-color:#fff;
}
.form{
  display:block;
}
.form input{
  float:left;
  width:85%;
  height:70rpx;
  border-bottom:1px solid #eee;
  font-size:12px;
}
.form button{
  float:right;
  width:80rpx;
  height:100%;
  background-color: transparent;
  font-size:12px;
}